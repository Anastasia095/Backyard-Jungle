<div class="profile-dashboard">
    <aside class="profile-info">
        <figure>
            <img class="profile-info-img"src="/img/chika.jpg" alt="">
            <!-- INSERT PROFILE IMAGE -->
        </figure>
        <h3>{{user_name}}</h3>
        {{> weather-tile}}
        {{> tips-tile}}
    </aside>

    <section class="profile-details">
        <div>
           <h3>My Garden</h3>
            <div class="wraper">
            {{#each plants as |plant|}}
                {{> profile-garden-tiles}}
            {{/each}}
            </div>
            <div class="input-group">
                <form id="plantSearch">
                    <input type="text" id="pSearch" class="form-control" placeholder="Looking for something?"
                        aria-label="Looking for something?" name="plant" aria-describedby="basic-addon2">
                    <input class="btn primary-btn" type="submit" value="Search">
            </div>

            <h3>My Posts</h3>
            {{#each post as |post|}}
                {{> post-box}}
            {{/each}}


        </div>
        <div class="input-group">

        </div>
    </section>

</div>