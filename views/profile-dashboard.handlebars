<div class="profile-dashboard">
    <aside class="profile-info">
        <figure>
            <img class="profile-info-img"src="/img/chika.jpg" alt="">
            <!-- INSERT PROFILE IMAGE -->
        </figure>
        <h3>{{user_name}}</h3>

        <section class="widgets">
            <div class="weather">
                <div class="widget-top">
                    <h3>Local Weather</h3>
                </div>
                <img class="icon" src="" id="icon">
                <h3 id="city">Weather in</h3>
                <p id="weather"></p>
                <p class="temp"></p>
                <p class="wind"></p>
                <p class="humidity"></p>
            </div>
        </section>        
       
        <section class="widgets">
            <div class="tips">
                <div class="widget-top">
                    <h3>Tips</h3>
                </div>
                <p id="tips"></p>
            </div>
        </section>    

</aside>

    <section class="profile-details">
        <div>
           <h3>My Garden</h3>
            <div class="wraper">
            {{#each plants as |plant|}}
                {{> profile-garden-tiles}}
            {{/each}}
            </div>

            <nav class="input-group">
                <form class="form-inline">
                    <input class="form-control" id="pSearch" type="search" placeholder="Looking for something?" aria-label="Looking for something?">
                </form>
                <button class="btn" type="submit">Search</button>
            </nav>

            <h3>My Posts</h3>
            {{#each post as |post|}}
                {{> post-box}}
            {{/each}}


        </div>

    </section>

</div>