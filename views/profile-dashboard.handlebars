<div class="profile-dashboard">
    <aside class="profile-info">
        <figure>
            <img src="/img/chika.jpg" alt="">
            <!-- INSERT PROFILE IMAGE -->
        </figure>
        <h3>{{user_name}}</h3>
        {{> weather-tile}}
        {{> tips-tile}}
    </aside>

    <section class="profile-details">
        <div>
            <h3>My Garden</h3>
            {{#each plants as |plant|}}
                {{> profile-garden-tiles}}
            {{/each}}

            <h3>My Posts</h3>
            {{#each post as |post|}}
                {{> post-box}}
            {{/each}}


        </div>

        <div class="input-group">

            <form id="plantSearch"action="http://localhost:3001/api/searchplant" method="post">
                <input type="text" id="pSearch" class="form-control" placeholder="Looking for something specific?"
                    aria-label="Looking for something specific?" name="plant" aria-describedby="basic-addon2">
                <input type="submit" value="OK">
            </form>
            {{!-- <div class="input-group-append">
                <button class="btn btn-outline-secondary" id="plantSearch" type="button" action="/#">Search</button>
            </div> --}}
        </div>



    </section>

